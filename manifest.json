{
  "name": "tl;dw",
  "version": "0.1",
  "description": "A popup to show transcripts for boring videos on the current page.",
  "background_page": "tldw_bg.html",
  "browser_action": {
    // Icon removed to show just plain text badge.
    //"default_icon": "icon.png",
    "popup": "tldw_pop.html"
  },
  "permissions": [
    //"http://api.flickr.com/"
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  //"content_security_policy": "default-src 'none'; script-src 'self'",
  "content_scripts": [
    {
      "js": [
        "js/jquery-1.7.1.js",
        "tldw_getvid.js"
      ],
      "matches": ["http://*/*","https://*/*"]
    }
  ]
}
